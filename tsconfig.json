{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "target": "ESNext",
    "allowSyntheticDefaultImports": true,
    // "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
  },
  "typeRoots": [
    "../../node_modules/@types",
    "../../node_modules/*-types"
  ],
  "exclude": [
    "../../node_modules",
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.json",
    "src/**/*.d.ts"
  ]
}
